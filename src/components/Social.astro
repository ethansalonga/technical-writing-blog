---
const { platform, username } = Astro.props
---
<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>

{
  platform === "linkedin" ? (
    <a href={`https://www.${platform}.com/in/${username}`}>{platform}</a>
  ) : (
    <a href={`https://www.${platform}.com/${username}`}>{platform}</a>
  )
}
